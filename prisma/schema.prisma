generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   String @id @default(uuid())
  email    String @unique
  password String
  role     Role

  @@index([email])
  @@map("users")
}

model Class {
  classId   String @id @default(uuid())
  className String @default("none")
  classSlug String @default("none")

  @@index([className])
  @@map("classes")
}

enum Role {
  ADMIN
  TEACHER
  CLERK
}
